{
  "features": [
    {
      "name": "inventoryManager",
      "enabled": true,
      "urlPatterns": ["*://*.horsereality.com/inventory*"]
    },
    {
      "name": "styleCustomization",
      "enabled": true,
      "styles": {
        "nav": [
          "html body .side-nav",
          "body#currency-exchange div.container .leftnav.hide-xs",
          "body#forum div.container .leftnav.hide-xs",
          "body#inventory div.container .leftnav.hide-xs",
          "body#foundation-breeder div.container .leftnav.hide-xs",
          "body#equistore div.container .leftnav.hide-xs",
          "body#wildlife-park div.container .leftnav.hide-xs",
          "body#search div.container .leftnav.hide-xs",
          "body#horses.background .leftnav.hide-xs",
          ".leftnav.hide-xs"
        ],
        "input": [
          "html body input:not([type=\"hidden\"]):not([name=\"edit_name\"])",
          "html body textarea",
          "html body select"
        ],
        "topNav": [".header-menu", ".bluebar_container"],
        "topNavIcons": ["img.icon24", ".header-menu img[class*='icon']"]
      },
      "variables": {
        "--hr-nav-background": "rgba(234, 240, 242, 1)",
        "--hr-input-background": "rgba(197, 216, 222, 1)",
        "--hr-input-border-radius": "4px",
        "--hr-top-nav-background": "rgba(8, 27, 40, 1)"
      }
    },
    {
      "name": "foalFlip",
      "enabled": false,
      "urlPattern": "https?://(?:www\\.|v2\\.)horsereality\\.com/horses/(?:stall/)?\\d+"
    },
    {
      "name": "backgroundManager",
      "enabled": true,
      "urlPattern": "*://*.horsereality.com/horses/*",
      "excludePattern": "*://*.horsereality.com/fitting-room*"
    },
    {
      "name": "textCustomization",
      "enabled": true,
      "urlPattern": "*://*.horsereality.com/*",
      "textElements": {
        "subtitle": {
          "selector": ".subtitle",
          "defaults": {
            "size": "14",
            "weight": "",
            "color": "#333333",
            "align": "",
            "transform": "",
            "font": "",
            "italic": false,
            "underline": false,
            "strike": false
          }
        },
        "h1": {
          "selector": "h1",
          "defaults": {
            "size": "24",
            "weight": "",
            "color": "#333333",
            "align": "",
            "transform": "",
            "font": "",
            "italic": false,
            "underline": false,
            "strike": false
          }
        }
      }
    },
    {
      "name": "fontManager",
      "enabled": true,
      "urlPattern": "*://*.horsereality.com/*"
    }
  ],
  "TEXT_SIZE_CONFIG": {
    "defaults": {
      "subtitle": 14,
      "h1": 24
    },
    "min": 8,
    "max": 64
  }
}
